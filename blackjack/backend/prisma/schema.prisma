generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int     @id @default(autoincrement())
  username   String  @unique
  email      String  @unique
  password   String
  profilePic String? // URL to the uploaded image; optional
  wins       Int     @default(0)
  losses     Int     @default(0)
  draws      Int     @default(0)
}